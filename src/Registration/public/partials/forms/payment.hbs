<div style="padding-top:20px">Please review the following details for transaction.</div>
<table class="ui celled table segment">
    <thead>
        <tr><th>Option</th>
        <th>Name</th>
        <th>Price</th></tr>
    </thead>
    <tbody>
        {{{name}}}
    </tbody>
</table>

<h1>payments</h1>

<form class="ui form segment" data-xhr="true" method="post" action="/Registration/form/payment">

    <div class="field">
        <label>First Name</label>
        <div class="ui left labeled input">
            {{{first_name}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Last Name</label>
        <div class="ui left labeled input">
            {{{last_name}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Email</label>
        <div class="ui left labeled input">
            {{{email}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Address</label>
        <div class="ui left labeled input">
            {{{address}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>City</label>
        <div class="ui left labeled input">
            {{{city}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>State</label>
        <div class="ui left labeled input">
            {{{state}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Zipcode</label>
        <div class="ui left labeled input">
            {{{zipcode}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Credit Card</label>
        <div class="ui left labeled input">
            {{{credit_card}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Security Code</label>
        <div class="ui left labeled input">
            {{{security_code}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    <div class="field">
        <label>Expiration Date</label>
        <div class="ui left labeled input">
            {{{expiration_date}}}
            <div class="ui corner label">
                <i class="icon asterisk"></i>
            </div>
        </div>
    </div>

    {{{event_slug}}}
    {{{id}}}
    <input type="submit" class="ui blue submit button" value="Submit" />
</form>